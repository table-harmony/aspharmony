@model PresentationLayer.Models.EditUserViewModel

<div class="card">
    <div class="card-header">
        <h2 class="mb-0">
            <i class="bi bi-pencil-square"></i> Edit User
        </h2>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            <input type="hidden" asp-for="Id" />

            <div class="mb-4">
                <label asp-for="UserName" class="form-label">
                    <i class="bi bi-person"></i> Username
                </label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
                <div class="form-text">Username must be unique and will be visible to other users.</div>
            </div>

            <div class="mb-4">
                <label asp-for="PhoneNumber" class="form-label">
                    <i class="bi bi-telephone"></i> Phone Number
                </label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                <div class="form-text">Optional. Will be used for SMS notifications if enabled.</div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Save Changes
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}