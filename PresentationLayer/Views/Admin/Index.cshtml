@model IEnumerable<DataAccessLayer.Entities.User>

<h2>Manage Users</h2>

<div class="mb-3">
    <input type="text" id="userSearch" class="form-control" placeholder="Search users...">
</div>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>User Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody id="userTableBody">
        @foreach (var user in Model) {
            <tr>
                <td>@user.Email</td>
                <td>@user.UserName</td>
                <td>
                    <a asp-action="Details" asp-controller="Admin" asp-route-id="@user.Id" class="btn btn-primary">Details</a>
                    <a asp-action="Edit" asp-controller="Admin" asp-route-id="@user.Id" class="btn btn-info">Edit</a>
                    <a asp-action="Delete" asp-controller="Admin" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<div>
    <a asp-action="Create" asp-controller="Admin" class="btn btn-primary">Create user</a>
    <a asp-action="Index" asp-controller="Feedback" class="btn btn-info">Feedbacks</a>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#userSearch").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#userTableBody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}