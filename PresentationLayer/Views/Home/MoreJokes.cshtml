@model List<string>

@{
    ViewData["Title"] = "More Jokes";
}

<h1>More Jokes</h1>

<form asp-action="MoreJokes" method="get" class="mb-4">
    <div class="input-group">
        <label for="count" class="input-group-text">Number of jokes:</label>
        <input type="number" id="count" name="count" class="form-control" value="@ViewBag.Count" min="1" max="50">
        <button type="submit" class="btn btn-primary">Get Jokes</button>
    </div>
</form>

<div class="list-group my-4">
    @foreach (var joke in Model) {
        <div class="list-group-item">
            <p>@joke</p>
        </div>
    }
</div>
