@{
    ViewData["Title"] = "Calculator";
}

<div class="card">
    <div class="card-header">
        <h2 class="mb-0">
            <i class="bi bi-calculator"></i> Calculator
        </h2>
    </div>
    <div class="card-body">
        <p class="lead mb-4">A simple calculator to perform basic arithmetic operations.</p>
        
        <form asp-action="Calculate" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="mb-4">
                <label for="a" class="form-label">
                    <i class="bi bi-123"></i> First Number
                </label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-1-circle"></i>
                    </span>
                    <input type="number" class="form-control" id="a" name="a" 
                           placeholder="Enter first number" required>
                </div>
                <div class="form-text">Enter any valid number.</div>
            </div>

            <div class="mb-4">
                <label for="b" class="form-label">
                    <i class="bi bi-123"></i> Second Number
                </label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-2-circle"></i>
                    </span>
                    <input type="number" class="form-control" id="b" name="b" 
                           placeholder="Enter second number" required>
                </div>
                <div class="form-text">Enter any valid number.</div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Calculate Sum
                </button>
            </div>
        </form>

        @if (ViewData["Result"] != null) {
            <div class="alert alert-success mt-4">
                <h4 class="alert-heading">
                    <i class="bi bi-check-circle"></i> Result
                </h4>
                <p class="mb-0">The sum is: @ViewData["Result"]</p>
            </div>
        }
    </div>
</div>
