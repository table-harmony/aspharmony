@model IEnumerable<DataAccessLayer.Entities.LibraryMembership>

<h2>Library Members</h2>

<table class="table">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var member in Model) {
            <tr>
                <td>@member.User.UserName</td>
                <td>
                    <form asp-action="RemoveMember" method="post" class="d-inline">
                        <input type="hidden" name="libraryId" value="@member.LibraryId" />
                        <input type="hidden" name="userId" value="@member.UserId" />
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to remove this member from the library?');">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Details" asp-route-id="@Model.FirstOrDefault()?.LibraryId" class="btn btn-secondary">Back to Library</a>
</div>