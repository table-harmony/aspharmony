@using BusinessLogicLayer.Services
@using DataAccessLayer.Entities
@using Microsoft.AspNet.Identity
@model IEnumerable<DataAccessLayer.Entities.Library>
@inject ILibraryMembershipService LibraryMembershipService

<h2>All Libraries</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Library</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var library in Model) {
            <tr>
                <td>@library.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@library.Id" class="btn btn-info btn-sm">Details</a>
                    @{
                        var userId = "ddd";
                        var isMember = await LibraryMembershipService.IsMemberAsync(library.Id, userId);
                        if (!isMember) {
                            <form asp-action="JoinLibrary" method="post" style="display: inline;">
                                <input type="hidden" name="libraryId" value="@library.Id" />
                                <button type="submit" class="btn btn-primary btn-sm">Join</button>
                            </form>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>