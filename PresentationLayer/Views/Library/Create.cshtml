@model PresentationLayer.Models.LibraryViewModel

<div class="card">
    <div class="card-header">
        <h2 class="mb-0">Create New Library</h2>
    </div>
    <div class="card-body">
        <p class="text-muted">Create a new library to share books with others.</p>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Library Name</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-book"></i></span>
                    <input asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <div class="form-check">
                    <input asp-for="AllowCopies" class="form-check-input" />
                    <label asp-for="AllowCopies" class="form-check-label">Allow Multiple Copies of Books</label>
                </div>
                <small class="text-muted">If enabled, multiple copies of the same book can be added to the library.</small>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create Library
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}