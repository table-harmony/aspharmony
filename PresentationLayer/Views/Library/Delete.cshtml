@model DataAccessLayer.Entities.Library

<h2>Delete Library</h2>

<h3>Are you sure you want to delete this library?</h3>
<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
