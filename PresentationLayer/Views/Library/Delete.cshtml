@model DataAccessLayer.Entities.Library

<h2>Delete library</h2>

<h3>Are you sure you want to delete this library?</h3>
<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Details" asp-route-id="@Model.Id" asp-controller="Library" class="btn btn-secondary">Back</a>
    </form>
</div>