@model LibraryViewModel

@{
    ViewData["Title"] = $"Edit {Model.Name} - Library Settings";
}

<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Libraries</a></li>
        <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Id">@Model.Name</a></li>
        <li class="breadcrumb-item active">Edit Library</li>
    </ol>
</nav>

<div class="card">
    <div class="card-header">
        <h2 class="mb-0">Edit Library Settings</h2>
    </div>
    <div class="card-body">
        <p class="text-muted">Modify the library settings and features. Changes will affect all members of the library.</p>

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Library Name</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-book"></i></span>
                    <input asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <div class="form-check">
                    <input asp-for="AllowCopies" class="form-check-input" />
                    <label asp-for="AllowCopies" class="form-check-label">Allow Multiple Copies of Books</label>
                </div>
                <small class="text-muted">If enabled, multiple copies of the same book can be added to the library.</small>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Save Changes
                </button>
                <a asp-action="Manage" asp-route-id="@Model.Id" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}