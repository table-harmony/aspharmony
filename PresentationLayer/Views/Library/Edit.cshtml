@model PresentationLayer.Models.LibraryViewModel

<h2>Edit Library</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group form-check form-switch mb-3">
        <label asp-for="AllowCopies" class="form-check-label"></label>
        <input asp-for="AllowCopies" class="form-check-input" type="checkbox" />
        <span asp-validation-for="AllowCopies" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
</form>