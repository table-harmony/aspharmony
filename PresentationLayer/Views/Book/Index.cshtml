@using System.Security.Claims
@model IEnumerable<DataAccessLayer.Entities.Book>

<h2>All Books</h2>

<p>
    @if (User.Identity.IsAuthenticated) {
        <a asp-action="Create" class="btn btn-primary">Create New Book</a>
    }
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Author</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model) {
            <tr>
                <td>@book.Title</td>
                <td>@book.Description</td>
                <td>@(book.Author?.UserName ?? "Unknown")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-info btn-sm">Details</a>
                    @if (User.IsInRole("Admin") || User.FindFirst(ClaimTypes.NameIdentifier)?.Value == book.AuthorId) {
                        <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@book.Id" class="btn btn-danger btn-sm">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>