@model PresentationLayer.Models.BookIndexViewModel

@using Utils

<h2>All Books</h2>

<div class="d-flex mb-3">
    <a asp-action="Create" class="btn btn-primary">Create New Book</a>
</div>

<div class="mb-3">
    <input type="text" id="bookSearch" class="form-control" placeholder="Search books...">
</div>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Server</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody id="bookTableBody">
        @foreach (var item in Model.Books) {
            <tr class="book-row">
                <td>
                    @(item.Metadata?.Title ?? "Unknown")
                </td>
                <td>@(item.Author?.UserName ?? "Unknown")</td>
                <td>@item.Server.GetDisplayName()</td>
                <td>
                    <div class="d-flex gap-2">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                        @if (User.IsInRole("Admin") || User.FindFirstValue(ClaimTypes.NameIdentifier) == item.AuthorId) {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


@section Scripts {
    <script>
        $(document).ready(function () {
            $("#bookSearch").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#bookTableBody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}
