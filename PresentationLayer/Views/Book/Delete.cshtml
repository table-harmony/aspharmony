@model BusinessLogicLayer.Services.Book

<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Books</a></li>
        <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Id">@Model.Metadata?.Title</a></li>
        <li class="breadcrumb-item active">Delete Book</li>
    </ol>
</nav>

<div class="card">
    <div class="card-header">
        <h2 class="mb-0">Delete Book</h2>
    </div>
    <div class="card-body">
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle"></i> Are you sure you want to delete "@Model.Metadata?.Title"? This action cannot be undone.
        </div>

        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />
            
            <div class="mt-4">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete
                </button>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>